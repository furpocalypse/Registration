{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "NodeNext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "paths": {
      "#src/*": ["./src/*"]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./theme.ts"],
  "references": [
    {
      "path": "./interview/js/lib"
    },
    {
      "path": "./interview/js/components"
    }
  ]
}
