{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "paths": {
      "#src/*": ["./src/*"]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "references": [
    { "path": "./interview/js/lib" },
    { "path": "./interview/js/components" }
  ]
}
